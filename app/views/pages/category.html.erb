<div class="container mt-2 mb-2">
<h2 class="text-center fs-1">Categories</h2>
<% @categories = @categories_array[0]%>
<% @icons = @categories_array[1]%>
 <% @count = 0 %>
    <% @categories["categories"].each do |category|%>
        <% if @count % 5 == 0 %>
          <div class="row justify-content-md-center">
        <% end %>
            <div class="card col col-lg-2">
              <%= link_to category["name"], presents_path(category_id: category["id"]), class: 'link_style' %>
              <% @icon_class = @icons.find do |icon|%>
                  <% icon[0] == category["id"] %>
              <% end %>
              <i class="<%=@icon_class[1]%> fa-5x"></i>
            </div>
            <% @count += 1 %>
          <% if @count % 5 == 0 %>
            </div>
        <% end %>
    <% end %>
</div>
