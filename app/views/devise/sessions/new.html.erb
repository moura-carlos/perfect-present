<div class="sidenav">
  <div>
    <img src="https://res.cloudinary.com/vmontenegro7/image/upload/v1647268322/Perfect%20Present/perfect_present_-_login_page_logo_-_2_wzj283.png" alt="Perfect Present Logo">
  </div>
</div>

<div class="container-signin form-signin">
  <div>
    <div class="credential-header-position">
      <h2 class="credential-header">Sign In</h2>
    </div>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" }, :placeholder => 'Username@email.com' %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" }, :placeholder => 'Enter your password' %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log In", class: "button-log-in" %>
      <%= f.button :submit, "Forgot Your Password", class: "button-forgot-password" %>
      <%= f.button :submit, "Sign Up", class: "button-log-in" %>
      <%# <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

<% end %>
