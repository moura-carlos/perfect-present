<h2>Log in</h2>

<div class="login-container-left">
<img src="https://res.cloudinary.com/ddrsnqrro/image/upload/v1647261838/Perfect%20Present/Images/perfect_present_logo_option_1_qyb5lb.png" alt="" class="d-block w-100 h-500">
</div>

<div>
  <div class="container login-container-right mx-auto">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions" id="login">
      <%= f.button :submit, "Log in", class: "button-login" %>
    </div>
  </div>
</div>

<% end %>

<%= render "devise/shared/links" %>
