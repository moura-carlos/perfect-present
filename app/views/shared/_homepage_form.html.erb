<div class="container user-form">
  <%= form_with url: pages_path, local: true, method: :get do %>
    <div>
   <%= label_tag "hobby" %>
   <%= select_tag "hobby", options_for_select(["collectables", "DIY", "Fitness", "Social Media", "Self-care", "It's a baby", "Playing with friends", "Fashion", "Going out", "Outdoor activities", "Throwing parties", "Having people over", "Homebody", "Cooking", "Binge watching", "Geek"]
), multiple: true, id: "hobby-dropdown-menu" %>
  <%= label_tag "Price Range" %>
  <%= select_tag "price_range",
  options_for_select(["R$ 0 - 100", "R$ 100 - 300", "R$ 300 - 500", "R$ 500+"]),
  prompt: "What's your budget?", class: 'form-select form-body', required: 'required'%>

  <%= label_tag "What's their age?" %>
  <%= select_tag "age_range",
  options_for_select(["Baby","Children","Teenager","Adult","Elderly"]),
  prompt: "What's their age?", class: 'form-select form-body', required: 'required'%>
 </div>

